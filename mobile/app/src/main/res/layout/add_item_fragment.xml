<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".AddItemFragment">

    <EditText
        android:id="@+id/add_item_money_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        android:background="@color/purple_200"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="Input money"
        android:inputType="numberDecimal"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_item_date_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_200"
        android:cursorVisible="true"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:hint="Input date"
        android:inputType="date"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/add_item_money_editText"
        app:layout_constraintTop_toBottomOf="@+id/add_item_money_editText" />

    <EditText
        android:id="@+id/add_item_address_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_200"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="Input address"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/add_item_money_editText"
        app:layout_constraintTop_toBottomOf="@+id/add_item_date_editText" />

    <EditText
        android:id="@+id/add_item_memo_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_200"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="Input memo"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/add_item_money_editText"
        app:layout_constraintTop_toBottomOf="@+id/add_item_address_editText" />

    <Button
        android:id="@+id/add_item_apply_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_memo_editText" />

</androidx.constraintlayout.widget.ConstraintLayout>